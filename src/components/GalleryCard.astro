---
const { sources, name, author } = Astro.props;
const { artist, gallery, heroLarge, heroSmall, thumbnail } = sources;
---

<div class="gallery-card">
  <a href="/painting-detail/starry-night">
    <img
      class="gallery-card__image"
      srcset={`${thumbnail} 400w, ${heroLarge} 1200w`}
      sizes="(max-width: 375px) 90vw, 33vw"
    />
  </a>
  <div class="gallery-card__paint-information">
    <strong class="gallery-card__paint-name">{name}</strong>
    <p class="gallery-card__paint-author">{author}</p>
  </div>
</div>

<style>
  .gallery-card {
    position: relative;

    &__paint-information {
      position: absolute;
      bottom: 0;
      left: 7%;
      max-width: 20ch;

      & > .gallery-card__paint-name {
        color: var(--color-white);
        font-size: 1.5rem;
        font-weight: bold;
        max-width: 20ch;
      }

      & > .gallery-card__paint-author {
        color: var(--color-gray-platinum);
        font-size: 0.8rem;
      }
    }

    &__image {
      width: 100%;
      height: 100%;
    }
  }
</style>
